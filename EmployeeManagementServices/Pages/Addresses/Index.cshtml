@page
@model EmployeeManagementServices.Pages.Addresses.IndexModel
@{
	ViewData["Title"] = "Employee Addresses";
}

<br />
<h2>List of Addresses</h2>
@*<a class="btn btn-primary btn-sm" href='/Addresses/Create'>New Address</a>*@
<br />
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Street</th>
			<th>City</th>
			<th>State</th>
			<th>Zip Code</th>
			<th>Country</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listAddresses)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.street</td>
				<td>@item.city</td>
				<td>@item.state</td>
				<td>@item.zip_code</td>
				<td>@item.country</td>
@*				<td>
					<a class="btn btn-primary btn-sm" href="/Addresses/Edit?id=@item.id">Edit</a>
				</td>*@
			</tr>
		}
	</tbody>
</table>